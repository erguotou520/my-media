{
  "name": "my-media-server",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "migrate": "bun run src/db/migrate.ts",
    "migrate:js": "bun run src/db/migrate.js",
    "generate": "bunx drizzle-kit generate --dialect sqlite --schema src/db/schema.ts",
    "seed": "bun run src/db/seed.ts",
    "seed:js": "bun run dist/db/seed.js",
    "dev": "bun run --watch src/index.ts",
    "build": "bun scripts/build.ts",
    "start": "bun run dist/index.js"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/fluent-ffmpeg": "^2.1.25",
    "drizzle-kit": "^0.23.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@elysiajs/bearer": "^1.1.1",
    "@elysiajs/jwt": "^1.1.0",
    "@elysiajs/static": "^1.1.0",
    "@elysiajs/swagger": "^1.1.0",
    "dayjs": "^1.11.12",
    "drizzle-orm": "^0.32.0",
    "drizzle-typebox": "^0.1.1",
    "elysia": "^1.1.3",
    "exif-reader": "^2.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "pino": "^9.3.1",
    "sharp": "^0.33.4",
    "zod": "^3.23.8"
  }
}